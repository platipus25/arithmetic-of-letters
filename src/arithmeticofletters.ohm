ArithmeticOfLetters {
  Expr (an expression)
    = BinaryOperator
    | Char

  BinaryOperator (a binary operator)
    = Expr "||" Expr -- concat
    | Expr "+" Char  -- add
    | Expr "-" Char  -- sub
    | Expr "&" Char  -- and
    | Expr "|" Char  -- or
    | Expr "^" Char  -- xor

  Char (a character)
    = "(" Expr ")"   -- paren
    | any            -- literal
}