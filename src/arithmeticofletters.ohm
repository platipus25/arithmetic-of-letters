ArithmeticOfLetters {
  Expression
    = Expression "||" Expression -- concat
    | Expression "+" Char      -- add
    | Expression "-" Char      -- sub
    | Expression "&" Char      -- and
    | Expression "|" Char      -- or
    | Expression "^" Char      -- xor
    | Char

  Char
    = "(" Expression ")"      -- paren
    | any                     -- literal
}